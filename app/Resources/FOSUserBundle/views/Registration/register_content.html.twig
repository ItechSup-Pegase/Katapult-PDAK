{% trans_default_domain 'FOSUserBundle' %}
<div class="col-md-12">
	<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
		<div class="form-group col-md-7">
	                <input placeholder="email" type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" required="required" class="form-control" />
	    </div>
		<div class="form-group col-md-7">
	                <input placeholder="Nom" type="text" id="fos_user_registration_form_username" name="fos_user_registration_form[username]" required="required" maxlength="255" pattern=".{2,}" class="form-control" />
	    </div>
		<div class="form-group col-md-7">                
	            		<input type="password" placeholder="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" required="required" class="form-control" />
	    </div>
		<div class="form-group col-md-7">            
		            	<input type="password" placeholder="password confirmation" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" required="required" class="form-control" />
	    </div>
	            {{ form_widget(form._token) }}
	    <div>
	   	<div class="form-group col-md-7">      
	      	<button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-floppy-saved"></span> Enregistrer</button>
	    </div>
	</form>
</div>