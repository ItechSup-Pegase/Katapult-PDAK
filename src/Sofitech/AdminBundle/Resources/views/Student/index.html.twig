{% extends 'SofitechAdminBundle::layout.html.twig' %}

{% block content -%}
    <div class="col-md-12">
        <h1>Liste des étudiants</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Actions</th>
                    {% block tableth %}{% endblock %}
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.firstname }}</td>                    
                    <td>{{ entity.lastname }}</td>
                    {% block tabletd %}{% endblock %}
                    <td>
                    {% block personaction %}{% endblock %}
                    <div class="btn-group" role="group" aria-label="...">
					  <a href="{{ path('student_show', { 'id': entity.id }) }}" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-user"></span> Afficher</a>
					 <a href="{{ path('student_edit', { 'id': entity.id }) }}" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-edit"></span> Modifier</a>
					</div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

            <ul class="list-unstyled">
            <li>
                <a href="{{ path('student_new') }}" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> Ajouter un étudiant</a>
            </li>
        </ul>
    </div>
{% endblock %}

